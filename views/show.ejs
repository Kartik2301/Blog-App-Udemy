<% include ./partials/header %>
<div id="theme_basic" class="ui main text container segment">
    <div class="ui huge header"><%= blog.title %></div>
    <div class="ui top attached ">
        <div class="item">
            <img class="ui centered rounded image" src="<%= blog.image %>" >
            <br>
            <div style="text-align:center">
            <div class="description">
                <p><%- blog.body %></p>
            </div>
            <br>
             <a class="ui orange button" href="/blogs/<%= blog._id %>/edit">Edit</a>
            <form id="delete" action="/blogs/<%= blog._id %>?_method=DELETE" method="POST">
                <button class="ui red button" onclick="return confirm('Are you sure you want to delete this item?');">Delete</button>
            </form>
            </div>
             <div class="content">
                <span>Published On:- <%= blog.created.toDateString() %></span>
            </div>
        </div>
    </div>
    
</div>
<% include ./partials/footer %>

